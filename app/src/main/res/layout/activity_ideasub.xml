<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ideasub"
    android:orientation="vertical"
    android:layout_gravity="center">
    <LinearLayout
        android:id="@+id/activity_ideasub"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView

        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:text="YOUR PROJECT IDEA"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/txtnam"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="82dp"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:paddingBottom="20dp"
        android:text="Full Name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtnam"
        android:layout_width="371dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtpro"
        android:textSize="20dp"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="82dp"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Project Name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtpro"
        android:layout_width="371dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtphn"
        android:layout_width="151dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="82dp"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Phone No."
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtphn"
        android:layout_width="373dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/email"
        android:layout_width="151dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="82dp"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:text="Email" />

    <EditText
        android:id="@+id/edtemail"
        android:layout_width="371dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/projectidea"
        android:layout_width="151dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="82dp"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:text="Project Idea" />

    <EditText
        android:id="@+id/edtprojectidea"
        android:layout_width="369dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="Send Idea" />
    </LinearLayout>
    <include layout="@layout/bottom_sheet"/>
</android.support.design.widget.CoordinatorLayout>