<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:background="@color/scient_color"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="125px">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/arrow"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:src="@drawable/arrow"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:id="@+id/Regitration">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/registericon"
                    android:layout_gravity="center"
                    android:fontFamily="@font/karlabold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karlabold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="bottom"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="Registration"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:id="@+id/gallery">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/galleryicon"
                    android:layout_gravity="center"
                    android:fontFamily="@font/karlabold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karlabold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="bottom"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="Gallery"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/events"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/eventicon"
                    android:layout_gravity="center"
                    android:fontFamily="@font/karlabold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karlabold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="bottom"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="Events"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/Project"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/projecticon"
                    android:layout_gravity="center"
                    android:fontFamily="@font/karlabold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karlabold"
                    android:layout_gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="Projects"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:id="@+id/Resources"
            android:layout_weight="1"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/resourceicon"
                    android:layout_gravity="center"
                    android:fontFamily="@font/karlabold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karlabold"
                    android:layout_gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="Resources"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/Contact"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/contactusicon"
                    android:layout_gravity="center"
                    android:fontFamily="@font/karlabold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karlabold"
                    android:layout_gravity="bottom"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:text="Contact Us"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">
        <FrameLayout
            android:layout_width="0dp"
            android:id="@+id/Idea_sub"
            android:layout_weight="1"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/ideasubmiticon"
                    android:layout_gravity="center"
                    android:fontFamily="@font/karlabold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karlabold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="bottom"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="Idea Submission"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/faq"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/faq"
                    android:layout_gravity="center"
                    android:fontFamily="@font/karlabold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karlabold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="bottom"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="FAQ"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/Announcements"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/announcementsicon"
                    android:layout_gravity="center"
                    android:fontFamily="@font/karlabold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/karlabold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="bottom"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="Announcements"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:background="#175283"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp">
            <TextView
                android:textSize="18sp"
                android:id="@+id/Made_by"
                android:textColor="@android:color/white"
                android:fontFamily="@font/karlabold"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Made By"
                android:gravity="center"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/Made_by"
                android:src="@drawable/spiderlogo"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>