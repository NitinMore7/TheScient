<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spider.scient.scientapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.spider.scient.scientapp.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.spider.scient.scientapp.imageshow"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.spider.scient.scientapp.Announcement"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.spider.scient.scientapp.confrence"
            android:configChanges="orientation"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name="com.spider.scient.scientapp.Resources"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.spider.scient.scientapp.Events"
            android:exported="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.spider.scient.scientapp.Accessreq"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.spider.scient.scientapp.contactus"
            android:exported="true"
            android:configChanges="orientation"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.spider.scient.scientapp.Rproject"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.spider.scient.scientapp.Register"
            android:exported="true"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.spider.scient.scientapp.ideasub"
            android:exported="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.spider.scient.scientapp.project"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.spider.scient.scientapp.Gallery"
            android:exported="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.spider.scient.scientapp.faq"
            android:exported="true" />
        <activity android:name="com.spider.scient.scientapp.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>